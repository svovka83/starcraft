generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id Int @id @default(autoincrement())

  fullName String
  email    String
  password String

  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

model Shop {
  id Int @id @default(autoincrement())

  units Unit[]

  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

model Battle {
  id Int @id @default(autoincrement())

  units Unit[]

  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

model FighterUp {
  id Int @id @default(autoincrement())

  name   String
  image  String
  mana   Int
  health Int
  attack Int
  price  Int

  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

model Unit {
  id Int @id @default(autoincrement())

  name   String
  image  String
  mana   Int
  health Int
  attack Int
  price  Int

  Shop     Shop?   @relation(fields: [shopId], references: [id])
  shopId   Int?
  Battle   Battle? @relation(fields: [battleId], references: [id])
  battleId Int?

  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}
